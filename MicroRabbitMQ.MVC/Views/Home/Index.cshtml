@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://github.com/aakashrajarnav/MicroRabbitMQ">Building RabbitMQ Microservices</a>.</p>
</div>

<form action="/home/transfer" method="post" class="mt-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white text-center">
                        <h5 class="mb-0">Transfer Money</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3 row">
                            <label for="FromAccount" class="col-sm-4 col-form-label text-end">From Account:</label>
                            <div class="col-sm-8">
                                <input type="text" name="FromAccount" id="FromAccount" class="form-control" />
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label for="ToAccount" class="col-sm-4 col-form-label text-end">To Account:</label>
                            <div class="col-sm-8">
                                <input type="text" name="ToAccount" id="ToAccount" class="form-control" />
                            </div>
                        </div>

                        <div class="mb-4 row">
                            <label for="TransferAmount" class="col-sm-4 col-form-label text-end">Amount:</label>
                            <div class="col-sm-8">
                                <input type="text" name="TransferAmount" id="TransferAmount" class="form-control" />
                            </div>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-success w-100">Transfer</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
